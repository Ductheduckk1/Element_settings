<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Section 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            app:cardCornerRadius="12dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Notifications -->
                <LinearLayout
                    android:id="@+id/item_notifications"
                    style="@style/SettingItemStyle"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_noti"
                        app:tint="#021B84" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Thông báo"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#B0B0B0"
                        android:scaleType="centerInside"/>
                </LinearLayout>

                <!-- Message -->
                <LinearLayout
                    android:id="@+id/item_message"
                    style="@style/SettingItemStyle"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_message"
                        app:tint="#021B84" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Message"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#B0B0B0"
                        android:scaleType="centerInside"/>
                </LinearLayout>

                <!-- Call & Video -->
                <LinearLayout
                    android:id="@+id/item_call"
                    style="@style/SettingItemStyle"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_call"
                        app:tint="#021B84" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Call &amp; Video"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#B0B0B0"
                        android:scaleType="centerInside"/>
                </LinearLayout>

                <!-- Danh bạ -->
                <LinearLayout
                    android:id="@+id/item_contact"
                    style="@style/SettingItemStyle"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_contact"
                        app:tint="#021B84" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Danh bạ"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#B0B0B0"
                        android:scaleType="centerInside"/>
                </LinearLayout>

                <!-- Giao diện và ngôn ngữ -->
                <LinearLayout
                    android:id="@+id/item_ui_language"
                    style="@style/SettingItemStyle"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_language"
                        app:tint="#021B84" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Giao diện và ngôn ngữ"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#B0B0B0"
                        android:scaleType="centerInside"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Bảo mật -->
                <LinearLayout
                    android:id="@+id/item_security"
                    style="@style/SettingItemStyle"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_security"
                        app:tint="#021B84" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Bảo mật"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#B0B0B0"
                        android:scaleType="centerInside"/>
                </LinearLayout>

                <!-- Cài đặt khác -->
                <LinearLayout
                    android:id="@+id/item_other"
                    style="@style/SettingItemStyle"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_setting"
                        app:tint="#021B84" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Cài đặt khác"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#B0B0B0"
                        android:scaleType="centerInside"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Help -->
                <LinearLayout
                    android:id="@+id/item_help"
                    style="@style/SettingItemStyle"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_help"
                        app:tint="#021B84" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Help &amp; About"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#B0B0B0"
                        android:scaleType="centerInside"/>
                </LinearLayout>

                <!-- Privacy Policy -->
                <LinearLayout
                    android:id="@+id/item_privacy"
                    style="@style/SettingItemStyle"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_privacy"
                        app:tint="#021B84" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Điều khoản và Chính sách bảo mật"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#B0B0B0"
                        android:scaleType="centerInside"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
