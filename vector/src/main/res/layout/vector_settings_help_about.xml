<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- CardView: Help -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preference_help"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:id="@+id/item_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/preference_help_title"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/summary_help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/preference_help_summary"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView: Versions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title_versions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preference_versions"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingBottom="8dp" />

                <!-- App Version -->
                <TextView
                    android:id="@+id/appVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_version"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/summaryAppVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.2.3"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingBottom="12dp" />

                <!-- SDK Version -->
                <TextView
                    android:id="@+id/SDKVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_sdk_version"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/summary_sdk_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.5.6"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingBottom="12dp" />

                <!-- Crypto Version -->
                <TextView
                    android:id="@+id/title_crypto_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_crypto_version"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/summary_version_crypto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7.8.9"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- CardView: System Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title_system"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preference_system_settings"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:id="@+id/item_app_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_app_info_link_title"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/summary_app_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_app_info_link_summary"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
