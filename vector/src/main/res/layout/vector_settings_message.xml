<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Card 1: Media confirmation -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xác nhận kích thước trước khi gửi"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Khi bật, bạn sẽ được yêu cầu xác nhận kích thước ảnh và video sẽ được gửi"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_media_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2: Message display + behavior -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Các Switch dạng list -->
                <Switch
                    android:id="@+id/switch_message_bubbles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show message bubbles"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_read_receipts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show read receipts"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_timestamps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show timestamps for all massages"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_removed_messages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show removed messages"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_emoji_keyboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show emoji keyboard"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_chat_effects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show chat effects"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_lastest_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show lastest user info"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_join_leave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show join and leave events"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_account_events"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show account events"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_typing_notify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send typing notifications"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_send_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send message with enter"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_inline_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inline URL preview"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_autoplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Autoplay animated images"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_markdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Markdown formatting"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

                <Switch
                    android:id="@+id/switch_direct_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable direct share"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:paddingVertical="8dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
